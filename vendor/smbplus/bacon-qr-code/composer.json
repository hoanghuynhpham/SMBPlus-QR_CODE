{
    "name": "smbplus/qr-code",
    "description": "QR code generator for PHP by SMBPlus",
    "license": "BSD-2-Clause",
    "homepage": "https://github.com/SMBPlus/qr-code",
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-iconv": "*",
        "dasprid/enum": "^1.0.3"
    },
    "suggest": {
        "ext-imagick": "to generate QR code images"
    },
    "authors": [
        {
            "name": "Phạm Hoàng Huynh",
            "email": "huynh.pham@smbplus.vn"
        }
    ],
    "autoload": {
        "psr-4": {
            "SMBPlus\\QrCode\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7 | ^8 | ^9",
        "spatie/phpunit-snapshot-assertions": "^4.2.9",
        "squizlabs/php_codesniffer": "^3.4",
        "phly/keep-a-changelog": "^2.1"
    },
    "config": {
        "allow-plugins": {
            "ocramius/package-versions": true
        }
    },
    "archive": {
        "exclude": [
            "/test",
            "/phpunit.xml.dist"
        ]
    }
}
